<?xml version="1.0" encoding="utf-8"?>

<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="uk.co.droidcon.hack.bstf">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".BstfApplication"
        android:allowBackup="false"
        android:fullBackupContent="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity-alias
            android:name=".EntryPointActivity"
            android:targetActivity=".gamestarting.GameStartingActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity-alias>

        <activity android:name=".MainActivity" />
        <activity android:name=".gamestarting.GameStartingActivity" />

        <activity
            android:name=".gameloop.GameLoopActivity"
            android:theme="@style/AppTheme.Fullscreen" />

    </application>

</manifest>
